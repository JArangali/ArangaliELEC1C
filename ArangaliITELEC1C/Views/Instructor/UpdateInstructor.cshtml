@model Instructor;

<form asp-action="AddInstructor" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="InstructorFirstName"></label>
        <input asp-for="InstructorFirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="InstructorLastName"></label>
        <input asp-for="InstructorLastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="InstructorIsTenured"></label>
        <input asp-for="@Model.InstructorIsTenured"></input>
    </div>

    <div class="form-group">
        <label asp-for="DateHired"></label>
        <input asp-for="DateHired" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Rank"></label>
        <input asp-for="Rank" class="form-control"></>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>