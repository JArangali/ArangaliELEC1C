@{
}
@model IEnumerable<Instructor>
<h1>Instructor List</h1>

<table class="table table-dark">
    <tr>
        <th>ID:</th>
        <th>First Name:</th>
        <th>Last Name:</th>
        <th>IsTenured:</th>
        <th>Rank:</th>
        <th>Hiring Date:</th>
        <th>Details:</th>
    </tr>

@foreach(var Instructor in Model)
    {
        <tr>
            <td>@Instructor.Id</td>
            <td>@Instructor.InstructorFirstName</td>
            <td>@Instructor.InstructorLastName</td>
            <td>@Instructor.InstructorIsTenured</td>
            <td>@Instructor.Rank</td>
            <td>@Instructor.DateHired</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.Id">Show Details</a></td>
        </tr>
}
</table>